<% include header.ejs %>

<div class="ui grid">
    <div class="four wide column">
        <a href="/post?author=<%= user._id %>"
           data-title="<%= user.name %> | <%= ({m: '男',f: '女', x: '保密'})[user.gender] %>"
           data-content="<%= user.bio %>"
           class="avatar">
            <img class="avatar" src="/img/<%= user.avatar %>" alt="">
        </a>
    </div>
    <div class="eight wide column">
        <form action="/posts/<%= post._id %>/edit" method="post" class="ui form segment">
            <div class="field required">
                <label>标题</label>
                <input type="text" name="title" value="<%= post.title %>">
            </div>
            <div class="field required">
                <label>内容</label>
                <textarea name="content" cols="30" rows="10"><%= post.title %></textarea>
            </div>
            <input type="submit" class="ui button" value="发布">
        </form>
    </div>
</div>

<% include footer.ejs %>